<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teste De IMC"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#D2691E"
        android:padding="20dp"
        android:gravity="center"
        android:elevation="4dp"/>

    <!-- Título Resultados -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados do Teste"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="24dp"
        android:gravity="left"/>

    <!-- Card com Resultados -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nome -->
            <TextView
                android:id="@+id/textNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ramon"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <!-- Classificação -->
            <TextView
                android:id="@+id/textClassificacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Magreza leve"
                android:textSize="18sp"
                android:textColor="#D2691E"
                android:layout_marginBottom="16dp"/>

            <!-- IMC -->
            <TextView
                android:id="@+id/textIMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seu IMC 19.54"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <!-- Peso -->
            <TextView
                android:id="@+id/textPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seu Peso 50.0"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <!-- Altura -->
            <TextView
                android:id="@+id/textAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sua Altura 160.0"
                android:textSize="16sp"
                android:textColor="#666666"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="VOLTAR"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#D2691E"
        android:elevation="4dp"/>

</LinearLayout>